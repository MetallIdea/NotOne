<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.microsoft.live.sample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.microsoft.live.sample.LiveSdkSampleApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.microsoft.live.sample.SignInActivity"
            android:configChanges="orientation" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.microsoft.live.sample.ExplorerActivity" />
        <activity
            android:name="com.microsoft.live.sample.MainActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity android:name="com.microsoft.live.sample.skydrive.SkyDriveActivity" />
        <activity android:name="com.microsoft.live.sample.identity.ViewProfileActivity" />
        <activity android:name="com.microsoft.live.sample.util.FilePicker" />
        <activity android:name="com.microsoft.live.sample.hotmail.ContactsActivity" />
    </application>

</manifest>